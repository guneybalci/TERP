@model TERP.WebUIMVC.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>TERP - Login</title>
    <!-- Favicon icon -->
    <link rel="shortcut icon" type="image/x-icon" href="/content/assets/icons/favicon/favicon.ico">

    <link href="/content/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Content/assets/css/koneks-login-page.css" />
</head>

<body>

    <div class="login-wrapper">
        <div class="login">
            <!-- <h1>KONEKS CRM</h1> -->
            <img class="" src="/Content/assets/images/koneks-logo-white.png" alt="" />
            <form autocomplete="off" method="post">
                <input autocomplete="off" class="login-input" type="text" name="username" value="@Model.Username" placeholder="Kullanıcı Adı"
                       required="required" />
                <input autocomplete="off" class="login-input" type="password" name="password" placeholder="Şifre"
                       required="required" />
                @if (ViewBag.LoginError != null)
                {
                    <p class="alert alert-danger">@ViewBag.LoginError</p>
                }
                <button type="submit" class="btn-login btn-primary-login btn-block-login btn-large-login">
                    CMS Paneline Giriş Yap
                </button>
            </form>
        </div>
    </div>
</body>

</html>