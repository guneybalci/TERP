@using TERP.Entities.Concrete
@model TERP.WebUIMVC.Models.UserViewModel
@{
    ViewBag.Title = "Yeni Kullanıcı Oluştur";
}
<div class="page-titles">
    <div class="hp-title">
        <h4 class="hp-h4">Kullanıcı Oluşturma</h4>
    </div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Kullanıcı Oluşturma</a></li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card uc-card">
            <div class="card-header">
                <h4 class="card-title">Yeni Kullanıcı Oluşturma</h4>
            </div>
            <div class="card-body">
                @if (TempData["UserSuccessResult"] != null)
                {
                    <div class="alert alert-success">@TempData["UserSuccessResult"]</div>
                }
                @if (TempData["UserErrorResult"] != null)
                {
                    <div class="alert alert-danger">@TempData["UserErrorResult"]</div>
                }
                <div class="form-validation">
                    <form class="form-valide" action="/user/add" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Kullanıcı
                                        Adı
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username"
                                               name="username" autocomplete="off"
                                               placeholder="Kullanıcı adı" value="@Model.AddUserViewModel.Username">
                                    </div>
                                </div>
                                @*<div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="val-email">
                                            E-Posta <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" class="form-control" id="val-email"
                                                   autocomplete="off" name="val-email"
                                                   placeholder="E-posta adresini giriniz">
                                        </div>
                                    </div>*@
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-password">
                                        Şife
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control" id="val-password"
                                               autocomplete="off" name="password"
                                               placeholder="Şifre giriniz">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label"
                                           for="val-confirm-password">
                                        Şifre (Tekrar) <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control"
                                               id="val-confirm-password" autocomplete="off"
                                               name="passwordConfirm"
                                               placeholder="Şifre tekrar giriniz">
                                    </div>
                                </div>

                            </div>
                            <div class="col-xl-6">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-skill">
                                        Yetkilendirme
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control default-select" id="val-skill"
                                                name="roleID">
                                            <option value="">Rol Seçiniz</option>
                                            @foreach (Role role in Model.Roles)
                                            {
                                                <option value="@role.Id" @(Model.AddUserViewModel.RoleID == role.Id ? "selected=''" : "")>@role.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-phoneus">
                                        Telefon
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-phoneus"
                                               name="phone" autocomplete="off"
                                               placeholder="0542 636 35 42" value="@Model.AddUserViewModel.Phone" />

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                                        Adres
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control us-tarea" id="val-suggestions"
                                                  name="adress" rows="6"
                                                  placeholder="Adres giriniz..">@Model.AddUserViewModel.Adress</textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <label class="css-control css-control-primary css-checkbox"
                                               for="val-terms">
                                            <input type="checkbox"
                                                   class="css-control-input mr-2 us-tterms" id="val-terms"
                                                   name="val-terms" value="1">
                                            <span class="css-control-indicator"></span>
                                            Onaylıyorum
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit"
                                                class="btn btn-primary boradi-4">
                                            Oluştur
                                        </button>

                                        <button type="reset"
                                                class="btn btn-light boradi-4 ml-2">
                                            Vazgeç
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>