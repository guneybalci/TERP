@model TERP.WebUIMVC.Models.CarViewModel
@{
    ViewBag.Title = "Anasayfa";
}

@{
    var carStatusActive = 0;
    var carStatusPassive = 0;
    foreach (var carStatus in Model.CarList)
    {
        if (carStatus.Status)
        {
            carStatusActive++;
        }
        else
        {
            carStatusPassive++;
        }
    }
}

